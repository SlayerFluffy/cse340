<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <% if (locals.loggedin) { %>
            <!-- check if user is logged in - show welcome message and logout link -->
             <a href="/account/" title = "Click to manage account">Welcome <%= locals.accountData.account_firstname %></a>
             <a href="/account/logout" title = "Click to log out">Logout</a>
             <% } else { %>
            <!-- if user is not logged in - show "My Account" -->
            <a href="/account/login" title="click to log in">My Account</a>
        <% } %>
    </div>
</header>